<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.addtocart">
            <block class="Nimasystems\AddMultipleProducts\Block\Product\Action"
                   ifconfig="nimasystems_add_multiple_products/settings/enabled"
                   name="product.info.amp" before="product.info.addtocart.instantPurchase"/>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <block class="Nimasystems\AddMultipleProducts\Block\Product\Action"
                   ifconfig="nimasystems_add_multiple_products/settings/enabled"
                   name="product.info.amp.additional" before="product.info.addtocart.instantPurchase.additional"/>
        </referenceBlock>
    </body>
</page>
